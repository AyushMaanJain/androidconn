<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sm.realonekart">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RealoneKart">
        <activity
            android:name=".Catagory"
            android:label="@string/title_activity_catagory"
            android:theme="@style/Theme.RealoneKart.NoActionBar"></activity>
        <activity
            android:name=".ProductDet"
            android:theme="@style/Theme.RealoneKart.NoActionBar" />
        <activity
            android:name=".Searched"
            android:label="Searched"
            android:theme="@style/Theme.RealoneKart.NoActionBar" />
        <activity
            android:name=".LogOrSign"
            android:label="@string/title_activity_log_or_sign"
            android:theme="@style/Theme.RealoneKart.NoActionBar" />
        <activity
            android:name=".Loading_screen"
            android:label="@string/app_name"
            android:theme="@style/Theme.RealoneKart.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RealoneKart.NoActionBar" />
    </application>

</manifest>